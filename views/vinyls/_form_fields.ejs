<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= vinyl.title %>">
    </div>
    <div class="form-item">
        <label>Artist</label>
        <select name="artist">
        <% artists.forEach(artist => { %>
            <% if (`${artist.id}` === `${vinyl.artist}`) { %>
                <option selected label="<%= artist.name %>" value="<%= artist.id %>">   
            <% } else {%>
                <option label="<%= artist.name %>" value="<%= artist.id %>"> 
            <% } %>
        <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Release Date</label>
        <input type="date" name="releaseDate"
                  value="<%= vinyl.releaseDate == null ? '' :
                  vinyl.releaseDate.toISOString().split('T')[0] %>">   
    </div>
    <div class="form-item">
        <label>Genre</label>
        <input type="text" name="genre" value="<%= vinyl.genre %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="vinyl-cover filepond">
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= vinyl.description %></textarea>
    </div>
</div>